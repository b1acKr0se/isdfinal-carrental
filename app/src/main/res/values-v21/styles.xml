<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:imageButtonStyle">?android:borderlessButtonStyle</item>
    </style>

    <style name="FABStyle">
        <item name="android:elevation">6dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Used to for the title of the Toolbar -->
        <item name="android:textColorPrimary">#fff</item>
        <!-- Used to for the title of the Toolbar when parent is Theme.AppCompat.Light -->
        <item name="android:textColorPrimaryInverse">#fff</item>
        <!-- Used to color the text of the action menu icons -->
        <item name="android:textColorSecondary">#fff</item>
        <!-- Used to color the overflow menu icon -->
        <item name="actionMenuTextColor">#fff</item>
    </style>

</resources>